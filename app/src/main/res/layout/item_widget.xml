<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/margin">

    <TextView
        android:id="@+id/tvNameIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/margin_small"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvMeasureIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameIngredient"
        android:paddingBottom="@dimen/margin_small"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvQuantityIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMeasureIngredient"
        android:textColor="@android:color/black" />

</RelativeLayout>